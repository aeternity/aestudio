{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "node_modules/ng2-semantic-ui/index.ts",
    "node_modules/ng2-semantic-ui/**/*.ts"
  ]
}
