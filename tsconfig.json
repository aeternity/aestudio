{
  "compileOnSave": false,
  
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types", "src/app/editor/typings.d.ts"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths" : {
      "stream": ["./node_modules/stream-browserify"],
    }
  },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": false,
      "strictTemplates": false 
                
    }
}
